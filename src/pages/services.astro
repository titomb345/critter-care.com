---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import PricingNotes from '../components/PricingNotes.astro';
import CTASection from '../components/CTASection.astro';
import { services } from '../content/services.json';

const byCategory = (cat: string) => services.filter(s => s.category === cat).sort((a, b) => a.order - b.order);
const visitsAndWalks = byCategory('visits-and-walks');
const outingsAndOvernights = byCategory('outings-and-overnights');
const additionalServices = byCategory('additional');
---

<BaseLayout title="Services — Critter Care Pet Sitting & Dog Walking | Lawndale, CA" description="Home visits, dog walking, dog park outings, overnight stays, and pet transportation in Lawndale and the South Bay. Affordable rates starting at $30.">
  <Hero
    title="Our Services"
    subtitle="Everything we offer to keep your pets happy and cared for."
  />

  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Visits & Walks -->
    <div class="mb-14">
      <h2 class="font-heading text-2xl sm:text-3xl font-bold text-heading mb-2">Visits & Walks</h2>
      <p class="text-muted mb-6">Daily check-ins and exercise for your pets, right in your neighborhood.</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {visitsAndWalks.map(service => (
          <ServiceCard
            name={service.name}
            duration={service.duration}
            price={service.price}
            description={service.description}
          />
        ))}
      </div>
    </div>

    <!-- Outings & Overnights -->
    <div class="mb-14">
      <h2 class="font-heading text-2xl sm:text-3xl font-bold text-heading mb-2">Outings & Overnights</h2>
      <p class="text-muted mb-6">Extended care for when your pet needs more time and attention.</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {outingsAndOvernights.map(service => (
          <ServiceCard
            name={service.name}
            duration={service.duration}
            price={service.price}
            description={service.description}
          />
        ))}
      </div>
    </div>

    <!-- Additional Services -->
    <div class="mb-14">
      <h2 class="font-heading text-2xl sm:text-3xl font-bold text-heading mb-2">Additional Services</h2>
      <p class="text-muted mb-6">Extra options to make things easier for you and your pet.</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {additionalServices.map(service => (
          <ServiceCard
            name={service.name}
            duration={service.duration}
            price={service.price}
            description={service.description}
          />
        ))}
      </div>
    </div>

    <PricingNotes notes={[
      'All prices shown are for single-pet visits.',
      'Additional charges apply for holidays — please contact us for a quote.',
      'Multiple pet pricing available upon request.',
      'Cancellations and refunds can be credited towards future pet sitting services. No cash refunds.',
    ]} />
  </section>

  <CTASection
    title="Ready to Book?"
    description="Get in touch today and give your pets the loving care they deserve."
    buttonText="Request Care"
  />
</BaseLayout>
