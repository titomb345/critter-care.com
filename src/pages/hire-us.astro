---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout title="Hire Us — Critter Care" description="Contact Critter Care for pet sitting services in the South Bay. Tell us about your pets and schedule a visit.">
  <Hero title="Hire Us" subtitle="Let's start with a simple conversation — no commitment, just seeing if we're a good fit." />

  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">
      <!-- Contact Form -->
      <div class="lg:col-span-3">
        <h2 class="font-heading text-2xl font-bold text-heading mb-2">Get in Touch</h2>
        <p class="text-muted text-sm mb-6">This is just a first step — tell us a little about you and your pets, and Laurie will personally follow up to chat about your needs.</p>
        <ContactForm />
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Getting Started -->
        <div class="bg-surface rounded-2xl p-6">
          <h3 class="font-heading text-lg font-bold text-heading mb-4">Getting Started</h3>
          <ol class="space-y-3 text-sm text-muted">
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary text-white text-xs flex items-center justify-center font-bold">1</span>
              <span>Send us a message — Laurie will personally get back to you</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary text-white text-xs flex items-center justify-center font-bold">2</span>
              <span>We'll review the Service Contract together</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary text-white text-xs flex items-center justify-center font-bold">3</span>
              <span>Schedule a meet & greet so we can get to know your furry family</span>
            </li>
          </ol>
        </div>

        <!-- Document Downloads -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-border/50">
          <h3 class="font-heading text-lg font-bold text-heading mb-2">Helpful Documents</h3>
          <p class="text-xs text-muted mb-4">Feel free to look these over ahead of time — we'll walk through everything together.</p>
          <div class="space-y-3">
            <a
              href="/docs/service-contract-2025.pdf"
              download
              class="flex items-center gap-3 px-4 py-3 rounded-xl bg-surface hover:bg-surface-alt transition-colors group"
            >
              <svg class="w-8 h-8 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 11v6m0 0l-2-2m2 2l2-2" />
              </svg>
              <div>
                <span class="text-sm font-semibold text-heading group-hover:text-primary-dark transition-colors block">Service Contract</span>
                <span class="text-xs text-muted">PDF — Print, initial & sign</span>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
