<form
  name="pet-care-inquiry"
  method="POST"
  action="/thank-you"
  data-netlify="true"
  netlify-honeypot="bot-field"
  class="space-y-8"
>
  <input type="hidden" name="form-name" value="pet-care-inquiry" />
  <input type="hidden" name="subject" value="New Pet Care Inquiry from Critter Care Website" />
  <p class="hidden">
    <label>Don't fill this out: <input name="bot-field" /></label>
  </p>

  <!-- Section: Your Information -->
  <fieldset class="space-y-5">
    <legend class="font-heading text-lg font-bold text-heading border-b border-border pb-2 w-full">Your Information</legend>

    <div>
      <label for="name" class="block text-sm font-medium text-heading mb-1">Name *</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="form-input"
        placeholder="Your full name"
      />
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-heading mb-1">Email *</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="form-input"
        placeholder="you@example.com"
      />
    </div>

    <div>
      <label for="phone" class="block text-sm font-medium text-heading mb-1">Phone *</label>
      <input
        type="tel"
        id="phone"
        name="phone"
        required
        class="form-input"
        placeholder="(310) 555-0123"
      />
    </div>

    <div>
      <label for="address" class="block text-sm font-medium text-heading mb-1">Address</label>
      <input
        type="text"
        id="address"
        name="address"
        class="form-input"
        placeholder="Your address (optional)"
      />
    </div>
  </fieldset>

  <!-- Section: About Your Pets -->
  <fieldset class="space-y-5">
    <legend class="font-heading text-lg font-bold text-heading border-b border-border pb-2 w-full">About Your Pets</legend>

    <div>
      <label for="pets" class="block text-sm font-medium text-heading mb-1">What types of pets do you have? *</label>
      <input
        type="text"
        id="pets"
        name="pets"
        required
        class="form-input"
        placeholder="e.g. 2 cats, 1 dog"
      />
    </div>

    <div>
      <label for="feeding" class="block text-sm font-medium text-heading mb-1">Pet food type, quantity, and feeding times</label>
      <textarea
        id="feeding"
        name="feeding"
        rows="3"
        class="form-input resize-y"
        placeholder="e.g. 1/2 cup dry food morning & evening, wet food at lunch"
      ></textarea>
    </div>

    <div>
      <label for="vet" class="block text-sm font-medium text-heading mb-1">Veterinarian name, address & phone</label>
      <textarea
        id="vet"
        name="vet"
        rows="2"
        class="form-input resize-y"
        placeholder="Vet clinic name, address, and phone number"
      ></textarea>
    </div>
  </fieldset>

  <!-- Section: Visit Details -->
  <fieldset class="space-y-5">
    <legend class="font-heading text-lg font-bold text-heading border-b border-border pb-2 w-full">Visit Details</legend>

    <div>
      <label for="dates" class="block text-sm font-medium text-heading mb-1">Dates & times leaving and returning</label>
      <input
        type="text"
        id="dates"
        name="dates"
        class="form-input"
        placeholder="e.g. March 10 (8am) — March 15 (6pm)"
      />
    </div>

    <div>
      <label for="visits" class="block text-sm font-medium text-heading mb-1">How many visits and/or overnights needed?</label>
      <input
        type="text"
        id="visits"
        name="visits"
        class="form-input"
        placeholder="e.g. 2 visits per day, or 3 overnights"
      />
    </div>

    <div>
      <label for="alarm" class="block text-sm font-medium text-heading mb-1">Alarm system or access code</label>
      <input
        type="text"
        id="alarm"
        name="alarm"
        class="form-input"
        placeholder="Alarm code or special entry instructions"
      />
    </div>

    <div>
      <label for="spare-key" class="block text-sm font-medium text-heading mb-1">Spare key arrangement</label>
      <select
        id="spare-key"
        name="spare-key"
        class="form-input"
      >
        <option value="">— Select an option —</option>
        <option value="return-in-person">Return in person</option>
        <option value="leave-on-final-visit">Leave on final visit</option>
        <option value="keep-for-future">Keep for future visits</option>
      </select>
    </div>
  </fieldset>

  <!-- Section: Additional Services -->
  <fieldset class="space-y-4">
    <legend class="font-heading text-lg font-bold text-heading border-b border-border pb-2 w-full">Additional Services</legend>
    <p class="text-xs text-muted">These are included free of charge — check any that apply.</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <label class="flex items-center gap-2 text-sm text-foreground cursor-pointer">
        <input type="checkbox" name="services" value="mail" class="rounded border-border text-primary focus:ring-primary-light" />
        Bring in mail
      </label>
      <label class="flex items-center gap-2 text-sm text-foreground cursor-pointer">
        <input type="checkbox" name="services" value="newspaper" class="rounded border-border text-primary focus:ring-primary-light" />
        Bring in newspaper
      </label>
      <label class="flex items-center gap-2 text-sm text-foreground cursor-pointer">
        <input type="checkbox" name="services" value="lights-blinds" class="rounded border-border text-primary focus:ring-primary-light" />
        Alternate lights & blinds
      </label>
      <label class="flex items-center gap-2 text-sm text-foreground cursor-pointer">
        <input type="checkbox" name="services" value="plants" class="rounded border-border text-primary focus:ring-primary-light" />
        Water plants
      </label>
      <label class="flex items-center gap-2 text-sm text-foreground cursor-pointer">
        <input type="checkbox" name="services" value="tv-radio" class="rounded border-border text-primary focus:ring-primary-light" />
        Leave TV / radio on
      </label>
      <label class="flex items-center gap-2 text-sm text-foreground cursor-pointer">
        <input type="checkbox" name="services" value="trash-bins" class="rounded border-border text-primary focus:ring-primary-light" />
        Trash & recycle bins in/out
      </label>
      <label class="flex items-center gap-2 text-sm text-foreground cursor-pointer">
        <input type="checkbox" name="services" value="other" class="rounded border-border text-primary focus:ring-primary-light" />
        Other (describe below)
      </label>
    </div>
  </fieldset>

  <!-- Section: Emergency & Other -->
  <fieldset class="space-y-5">
    <legend class="font-heading text-lg font-bold text-heading border-b border-border pb-2 w-full">Emergency & Other</legend>

    <div>
      <label for="emergency-contact" class="block text-sm font-medium text-heading mb-1">Emergency contact info</label>
      <textarea
        id="emergency-contact"
        name="emergency-contact"
        rows="2"
        class="form-input resize-y"
        placeholder="Name, phone, relationship"
      ></textarea>
    </div>

    <div>
      <label for="message" class="block text-sm font-medium text-heading mb-1">Additional instructions</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        class="form-input resize-y"
        placeholder="Anything else we should know — pet quirks, special routines, etc."
      ></textarea>
    </div>
  </fieldset>

  <p class="text-xs text-muted/60">
    By submitting this form, you agree that your data will be stored electronically and processed for the purpose of establishing contact.
  </p>

  <p class="text-xs text-muted">No commitment — this just starts the conversation. Fill in as much or as little as you'd like.</p>

  <button type="submit" class="btn-primary w-full sm:w-auto">
    Send Message
  </button>
</form>
