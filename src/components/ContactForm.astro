<form
  name="contact"
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  class="space-y-5"
>
  <input type="hidden" name="form-name" value="contact" />
  <p class="hidden">
    <label>Don't fill this out: <input name="bot-field" /></label>
  </p>

  <div>
    <label for="name" class="block text-sm font-medium text-brown mb-1">Name *</label>
    <input
      type="text"
      id="name"
      name="name"
      required
      class="w-full px-4 py-2.5 rounded-xl border border-warm-gray bg-white text-brown-dark placeholder:text-brown-light/40 focus:outline-none focus:ring-2 focus:ring-sage-light focus:border-sage-light transition"
      placeholder="Your full name"
    />
  </div>

  <div>
    <label for="email" class="block text-sm font-medium text-brown mb-1">Email *</label>
    <input
      type="email"
      id="email"
      name="email"
      required
      class="w-full px-4 py-2.5 rounded-xl border border-warm-gray bg-white text-brown-dark placeholder:text-brown-light/40 focus:outline-none focus:ring-2 focus:ring-sage-light focus:border-sage-light transition"
      placeholder="you@example.com"
    />
  </div>

  <div>
    <label for="phone" class="block text-sm font-medium text-brown mb-1">Phone *</label>
    <input
      type="tel"
      id="phone"
      name="phone"
      required
      class="w-full px-4 py-2.5 rounded-xl border border-warm-gray bg-white text-brown-dark placeholder:text-brown-light/40 focus:outline-none focus:ring-2 focus:ring-sage-light focus:border-sage-light transition"
      placeholder="(310) 555-0123"
    />
  </div>

  <div>
    <label for="address" class="block text-sm font-medium text-brown mb-1">Address</label>
    <input
      type="text"
      id="address"
      name="address"
      class="w-full px-4 py-2.5 rounded-xl border border-warm-gray bg-white text-brown-dark placeholder:text-brown-light/40 focus:outline-none focus:ring-2 focus:ring-sage-light focus:border-sage-light transition"
      placeholder="Your address (optional)"
    />
  </div>

  <div>
    <label for="pets" class="block text-sm font-medium text-brown mb-1">What types of pets do you have? *</label>
    <input
      type="text"
      id="pets"
      name="pets"
      required
      class="w-full px-4 py-2.5 rounded-xl border border-warm-gray bg-white text-brown-dark placeholder:text-brown-light/40 focus:outline-none focus:ring-2 focus:ring-sage-light focus:border-sage-light transition"
      placeholder="e.g. 2 cats, 1 dog"
    />
  </div>

  <div>
    <label for="message" class="block text-sm font-medium text-brown mb-1">Additional Information / Comments *</label>
    <textarea
      id="message"
      name="message"
      required
      rows="4"
      class="w-full px-4 py-2.5 rounded-xl border border-warm-gray bg-white text-brown-dark placeholder:text-brown-light/40 focus:outline-none focus:ring-2 focus:ring-sage-light focus:border-sage-light transition resize-y"
      placeholder="Tell us about your pet care needs, dates, etc."
    ></textarea>
  </div>

  <p class="text-xs text-brown-light/60">
    By submitting this form, you agree that your data will be stored electronically and processed for the purpose of establishing contact.
  </p>

  <p class="text-xs text-brown-light">No commitment â€” this just starts the conversation.</p>

  <button
    type="submit"
    class="w-full sm:w-auto px-8 py-3 rounded-xl bg-sage text-white font-semibold hover:bg-sage-dark focus:outline-none focus:ring-2 focus:ring-sage-light focus:ring-offset-2 transition-colors cursor-pointer"
  >
    Send Message
  </button>
</form>
