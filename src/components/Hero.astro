---
import { Image } from 'astro:assets';
import heroBanner from '../assets/images/hero/banner.jpg';
import PawPrint from './PawPrint.astro';

interface Props {
  title: string;
  subtitle?: string;
  showImage?: boolean;
}

const { title, subtitle, showImage = false } = Astro.props;
---

<section class="relative overflow-hidden bg-gradient-to-br from-surface via-surface-alt to-primary-light/20">
  {showImage && (
    <div class="absolute inset-0">
      <Image
        src={heroBanner}
        alt="Happy pets at Critter Care"
        class="w-full h-full object-cover opacity-20"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-foreground/30 to-transparent"></div>
    </div>
  )}
  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24 text-center">
    <h1 class="font-heading text-4xl sm:text-5xl lg:text-7xl font-extrabold text-heading mb-4 leading-tight">
      {title}
    </h1>
    {subtitle && (
      <p class="text-lg sm:text-xl text-muted max-w-2xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    )}
    <slot />
  </div>
  <!-- Decorative paw prints -->
  <PawPrint class="absolute top-4 left-8 w-12 h-12 rotate-[-15deg] opacity-20" />
  <PawPrint class="absolute bottom-6 right-12 w-10 h-10 rotate-[20deg] opacity-20" />
</section>
