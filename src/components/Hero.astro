---
import { Image } from 'astro:assets';
import heroBanner from '../assets/images/hero/banner.jpg';

interface Props {
  title: string;
  subtitle?: string;
  showImage?: boolean;
}

const { title, subtitle, showImage = false } = Astro.props;
---

<section class="relative overflow-hidden bg-gradient-to-br from-cream via-cream-dark to-sage-light/20">
  {showImage && (
    <div class="absolute inset-0">
      <Image
        src={heroBanner}
        alt="Happy pets at Critter Care"
        class="w-full h-full object-cover opacity-20"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-brown-dark/30 to-transparent"></div>
    </div>
  )}
  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24 text-center">
    <h1 class="font-heading text-4xl sm:text-5xl lg:text-7xl font-extrabold text-brown mb-4 leading-tight">
      {title}
    </h1>
    {subtitle && (
      <p class="text-lg sm:text-xl text-brown-light max-w-2xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    )}
    <slot />
  </div>
  <!-- Decorative paw prints -->
  <svg class="absolute top-4 left-8 w-12 h-12 rotate-[-15deg] opacity-20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" aria-hidden="true">
    <ellipse cx="32" cy="42" rx="14" ry="12" fill="#333" /><ellipse cx="15" cy="22" rx="7" ry="9" fill="#333" transform="rotate(-10 15 22)" /><ellipse cx="49" cy="22" rx="7" ry="9" fill="#333" transform="rotate(10 49 22)" /><ellipse cx="25" cy="10" rx="6" ry="8" fill="#333" transform="rotate(-5 25 10)" /><ellipse cx="39" cy="10" rx="6" ry="8" fill="#333" transform="rotate(5 39 10)" />
  </svg>
  <svg class="absolute bottom-6 right-12 w-10 h-10 rotate-[20deg] opacity-20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" aria-hidden="true">
    <ellipse cx="32" cy="42" rx="14" ry="12" fill="#333" /><ellipse cx="15" cy="22" rx="7" ry="9" fill="#333" transform="rotate(-10 15 22)" /><ellipse cx="49" cy="22" rx="7" ry="9" fill="#333" transform="rotate(10 49 22)" /><ellipse cx="25" cy="10" rx="6" ry="8" fill="#333" transform="rotate(-5 25 10)" /><ellipse cx="39" cy="10" rx="6" ry="8" fill="#333" transform="rotate(5 39 10)" />
  </svg>
</section>
